<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:padding="3dp"
        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"

                    >

            </ImageView>





        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">




            <TextView

                    android:id="@+id/wrapperType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                android:textColor="@color/design_default_color_primary"
                    android:layout_marginStart="25dp"
                    android:text="Wrapper Type">

            </TextView>

            <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                android:textColor="@color/design_default_color_primary"
                    android:text="Artist Name"
                    android:padding="3dp">

            </TextView>

            <TextView
                    android:id="@+id/artistId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary"
                    android:layout_marginStart="25dp"
                    android:text="Artist Id"
                    android:padding="3dp">

            </TextView>


            <TextView
                    android:id="@+id/releaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:lines="2"
                android:textColor="@color/design_default_color_primary"
                    android:text="releaseDate"
                    android:padding="3dp">

            </TextView>



        </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:text="Country">

            </TextView>

            <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="country"
                android:textColor="@color/teal_200"
                    android:padding="3dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:text="Primary GenreName">

            </TextView>

            <TextView
                    android:id="@+id/primaryGenreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:textColor="@color/teal_200"
                    android:text="country"
                    android:padding="3dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:text="collectionCensoredName">

            </TextView>

            <TextView
                    android:id="@+id/collectionCensoredName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:textColor="@color/teal_200"
                    android:text="country"
                    android:padding="3dp">

            </TextView>


        </LinearLayout>



        <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
            android:id="@+id/des_title"
                android:text="description:"
            android:textColor="@color/colorBlack"
                android:padding="3dp">

        </TextView>


        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
            android:textColor="@color/teal_200"
                android:text="Not Available"
                android:padding="3dp">

        </TextView>


    </LinearLayout>



</ScrollView>